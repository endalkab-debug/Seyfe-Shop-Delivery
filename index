    <script>
        // Delivery boy data
        let currentDeliveryBoy = JSON.parse(localStorage.getItem('current_delivery_boy')) || {
            id: 1,
            name: "አብዱሬ",
            phone: "0948002320",
            status: "available",
            currentOrder: null,
            earningsToday: 0,
            completedToday: 0,
            totalEarnings: 0
        };
        
        let availableOrders = JSON.parse(localStorage.getItem('delivery_orders')) || [];
        let currentOrder = null;
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadDeliveryBoyInfo();
            loadAvailableOrders();
            updateEarningsDisplay();
            setupNavigation();
            
            // Check for new orders periodically
            setInterval(checkForNewOrders, 15000);
            
            // Simulate incoming orders for testing
            setTimeout(simulateNewOrder, 2000);
        });
        
        function loadDeliveryBoyInfo() {
            document.getElementById('deliveryName').textContent = currentDeliveryBoy.name;
            document.getElementById('deliveryPhone').textContent = formatPhone(currentDeliveryBoy.phone);
            updateStatusUI();
        }
        
        function toggleStatus() {
            const btn = document.getElementById('toggleStatusBtn');
            
            if (currentDeliveryBoy.status === 'available') {
                currentDeliveryBoy.status = 'busy';
                btn.innerHTML = '<i class="fas fa-toggle-off"></i> ለትእዛዝ ዝግጁ ይሁኑ';
                btn.className = 'btn btn-warning';
                showNotification('አሁን በስራ ላይ ነዎት', 'warning');
            } else {
                currentDeliveryBoy.status = 'available';
                btn.innerHTML = '<i class="fas fa-toggle-on"></i> የስራ ሁኔታ';
                btn.className = 'btn btn-success';
                showNotification('አሁን ለትእዛዝ ዝግጁ ነዎት!', 'success');
            }
            
            updateStatusUI();
            saveDeliveryBoyData();
        }
        
        function updateStatusUI() {
            const indicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');
            
            // Remove all status classes
            indicator.classList.remove('status-available', 'status-busy', 'status-offline');
            
            // Add current status class
            indicator.classList.add(`status-${currentDeliveryBoy.status}`);
            
            // Update text
            const statusMessages = {
                'available': 'ለትእዛዝ ዝግጁ',
                'busy': 'በስራ ላይ',
                'offline': 'ኦፍላይን'
            };
            statusText.textContent = statusMessages[currentDeliveryBoy.status];
        }
        
        function loadAvailableOrders() {
            const container = document.getElementById('availableOrders');
            const noOrdersMsg = document.getElementById('noOrdersMessage');
            const currentOrderSection = document.getElementById('currentOrderSection');
            
            // Hide current order section if no current order
            if (!currentDeliveryBoy.currentOrder) {
                currentOrderSection.style.display = 'none';
            }
            
            // Filter available orders (not assigned to anyone)
            const available = availableOrders.filter(order => 
                order.status === 'ready' && !order.assignedTo
            );
            
            if (available.length === 0 && !currentDeliveryBoy.currentOrder) {
                container.innerHTML = '';
                noOrdersMsg.style.display = 'block';
                return;
            }
            
            container.innerHTML = '';
            noOrdersMsg.style.display = 'none';
            
            available.forEach(order => {
                const orderCard = createOrderCard(order);
                container.appendChild(orderCard);
            });
        }
        
        function createOrderCard(order) {
            const card = document.createElement('div');
            card.className = 'order-card slide-in';
            card.id = `order-${order.id}`;
            
            const totalItems = order.items.length;
            
            card.innerHTML = `
                <div class="order-header">
                    <div class="order-id">ትእዛዝ #${order.id}</div>
                    <div class="order-time">${order.time}</div>
                </div>
                
                <div class="customer-info">
                    <div class="customer-name">${order.customer}</div>
                    <div class="customer-phone">
                        <i class="fas fa-phone"></i> ${formatPhone(order.phone)}
                    </div>
                </div>
                
                <div class="delivery-address">
                    <div class="address-title">
                        <i class="fas fa-map-marker-alt"></i> የመላኪያ አድራሻ
                    </div>
                    <div>${order.address}</div>
                    ${order.notes ? `
                    <div style="margin-top: 10px; padding: 10px; background: #fff3cd; border-radius: 5px; font-size: 0.9rem;">
                        <i class="fas fa-info-circle"></i> ${order.notes}
                    </div>
                    ` : ''}
                </div>
                
                <div class="order-items">
                    <div class="items-title">የትእዛዝ እቃዎች (${totalItems})</div>
                    <ul class="item-list">
                        ${order.items.map(item => `
                            <li>
                                <span>${item}</span>
                            </li>
                        `).join('')}
                    </ul>
                </div>
                
                <div class="order-total">
                    <span>ጠቅላላ ዋጋ</span>
                    <span>${order.total}</span>
                </div>
                
                <div class="action-buttons">
                    <button class="btn btn-primary" onclick="acceptOrder(${order.id})">
                        <i class="fas fa-check-circle"></i> ትእዛዙን ይቀበሉ
                    </button>
                    <button class="btn btn-whatsapp" onclick="callCustomer('${order.phone}')">
                        <i class="fas fa-phone"></i> ደውል
                    </button>
                </div>
                
                <div style="margin-top: 15px; font-size: 0.9rem; color: #666; text-align: center;">
                    <i class="fas fa-store"></i> መደብር: ሰላም በር ኮንዶ
                </div>
            `;
            
            return card;
        }
        
        function acceptOrder(orderId) {
            if (currentDeliveryBoy.status === 'busy' && currentDeliveryBoy.currentOrder !== orderId) {
                showNotification('አሁን ሌላ ትእዛዝ ላይ ነዎት!', 'warning');
                return;
            }
            
            const order = availableOrders.find(o => o.id === orderId);
            if (!order) return;
            
            if (confirm(`ትእዛዝ #${orderId} መቀበል ይፈልጋሉ?`)) {
                // Remove from available orders
                const orderCard = document.getElementById(`order-${orderId}`);
                if (orderCard) {
                    orderCard.remove();
                }
                
                // Set as current order
                currentOrder = order;
                currentDeliveryBoy.currentOrder = orderId;
                currentDeliveryBoy.status = 'busy';
                
                // Update order in list
                const orderIndex = availableOrders.findIndex(o => o.id === orderId);
                if (orderIndex !== -1) {
                    availableOrders[orderIndex].assignedTo = currentDeliveryBoy.id;
                    availableOrders[orderIndex].status = 'onway';
                    saveOrders();
                }
                
                // Update UI
                updateStatusUI();
                document.getElementById('toggleStatusBtn').innerHTML = '<i class="fas fa-toggle-off"></i> ለትእዛዝ ዝግጁ ይሁኑ';
                document.getElementById('toggleStatusBtn').className = 'btn btn-warning';
                
                // Show current order section
                document.getElementById('currentOrderSection').style.display = 'block';
                loadCurrentOrder();
                
                // Update available orders display
                if (document.querySelectorAll('.order-card').length === 0) {
                    document.getElementById('noOrdersMessage').style.display = 'block';
                }
                
                showNotification(`ትእዛዝ #${orderId} ተቀብለዋል!`, 'success');
                saveDeliveryBoyData();
                
                // Notify shop via WhatsApp
                const shopMessage = `ሰይፈ ሰላም!
ትእዛዝ #${orderId} ተቀበልኩ።
መላኪያ ሰራተኛ: ${currentDeliveryBoy.name}
ስልክ: ${currentDeliveryBoy.phone}
አሁን እመጣለሁ።`;
                
                setTimeout(() => {
                    window.open(`https://wa.me/251939869181?text=${encodeURIComponent(shopMessage)}`, '_system');
                }, 1000);
            }
        }
        
        function loadCurrentOrder() {
            if (!currentOrder) return;
            
            const container = document.getElementById('currentOrderContainer');
            
            container.innerHTML = `
                <div class="order-header">
                    <div class="order-id">ትእዛዝ #${currentOrder.id}</div>
                    <div class="order-time">${currentOrder.time}</div>
                </div>
                
                <div class="customer-info">
                    <div class="customer-name">${currentOrder.customer}</div>
                    <div class="customer-phone">
                        <i class="fas fa-phone"></i> ${formatPhone(currentOrder.phone)}
                    </div>
                </div>
                
                <div style="margin: 20px 0;">
                    <div style="font-weight: 600; color: var(--dark); margin-bottom: 10px;">
                        <i class="fas fa-map-marker-alt"></i> የመላኪያ ሂደት
                    </div>
                    
                    <div style="background: #f8f9fa; padding: 15px; border-radius: 8px;">
                        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 10px;">
                            <div style="width: 30px; height: 30px; background: var(--primary); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-store"></i>
                            </div>
                            <div>
                                <div style="font-weight: 600;">መደብር</div>
                                <div style="font-size: 0.9rem; color: #666;">ሰላም በር ኮንዶ</div>
                            </div>
                        </div>
                        
                        <div style="text-align: center; margin: 10px 0;">
                            <i class="fas fa-arrow-down" style="color: var(--secondary);"></i>
                        </div>
                        
                        <div style="display: flex; align-items: center; gap: 15px;">
                            <div style="width: 30px; height: 30px; background: var(--success); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-home"></i>
                            </div>
                            <div>
                                <div style="font-weight: 600;">የደንበኛ አድራሻ</div>
                                <div style="font-size: 0.9rem; color: #666;">${currentOrder.address}</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                ${currentOrder.notes ? `
                <div style="background: #fff3cd; padding: 15px; border-radius: 8px; margin: 15px 0; border-left: 3px solid var(--warning);">
                    <div style="font-weight: 600; color: #856404; display: flex; align-items: center; gap: 8px;">
                        <i class="fas fa-info-circle"></i> ልዩ መመሪያ
                    </div>
                    <div style="margin-top: 5px; color: #856404;">${currentOrder.notes}</div>
                </div>
                ` : ''}
                
                <div class="order-items">
                    <div class="items-title">የትእዛዝ እቃዎች</div>
                    <ul class="item-list">
                        ${currentOrder.items.map(item => `
                            <li>
                                <span>${item}</span>
                            </li>
                        `).join('')}
                    </ul>
                </div>
                
                <div class="order-total">
                    <span>ጠቅላላ ዋጋ</span>
                    <span>${currentOrder.total}</span>
                </div>
                
                <div class="action-buttons">
                    <button class="btn btn-warning" onclick="startDelivery()">
                        <i class="fas fa-play-circle"></i> መላኪያ ጀምር
                    </button>
                    <button class="btn btn-whatsapp" onclick="callCustomer('${currentOrder.phone}')">
                        <i class="fas fa-phone"></i> ደውል
                    </button>
                </div>
                
                <div style="margin-top: 20px; text-align: center;">
                    <button class="btn btn-danger" onclick="cancelDelivery()">
                        <i class="fas fa-times-circle"></i> ትእዛዙን ሰርዝ
                    </button>
                </div>
            `;
        }
        
        function startDelivery() {
            if (!currentOrder) return;
            
            if (confirm("መላኪያ መጀመር ይፈልጋሉ?")) {
                showNotification("መላኪያ ተጀምሯል! ደህና ጉዞ!", "success");
                
                // Update UI
                const buttons = document.querySelector('#currentOrderContainer .action-buttons');
                if (buttons) {
                    buttons.innerHTML = `
                        <button class="btn btn-success" onclick="completeDelivery()">
                            <i class="fas fa-check-circle"></i> ትእዛዙን ያረጋግጡ
                        </button>
                        <button class="btn btn-whatsapp" onclick="callCustomer('${currentOrder.phone}')">
                            <i class="fas fa-phone"></i> ደውል
                        </button>
                    `;
                }
                
                // Notify customer
                const customerMessage = `ሰላም ${currentOrder.customer}፣ የሰይፈ ልዩ በለጬ የመላኪያ ሰራተኛ ነኝ።
ትእዛዝዎን እየወሰድኩት ነው።
በቅርብ ጊዜ እመጣለሁ።
ስልክ: ${currentDeliveryBoy.phone}`;
                
                setTimeout(() => {
                    window.open(`https://wa.me/${currentOrder.phone.replace('+', '')}?text=${encodeURIComponent(customerMessage)}`, '_system');
                }, 1000);
            }
        }
        
        function completeDelivery() {
            if (!currentOrder) return;
            
            if (confirm(`ትእዛዝ #${currentOrder.id} ተወስዷል?`)) {
                // Calculate earnings (15% of order total)
                const orderTotal = parseInt(currentOrder.total.replace(' ብር', '')) || 0;
                const deliveryFee = Math.floor(orderTotal * 0.15);
                
                // Update delivery boy data
                currentDeliveryBoy.earningsToday += deliveryFee;
                currentDeliveryBoy.completedToday += 1;
                currentDeliveryBoy.totalEarnings += deliveryFee;
                currentDeliveryBoy.currentOrder = null;
                currentDeliveryBoy.status = 'available';
                
                // Update order status
                const orderIndex = availableOrders.findIndex(o => o.id === currentOrder.id);
                if (orderIndex !== -1) {
                    availableOrders[orderIndex].status = 'delivered';
                    availableOrders[orderIndex].deliveredAt = new Date().toLocaleTimeString();
                    saveOrders();
                }
                
                // Reset current order
                currentOrder = null;
                
                // Update UI
                updateStatusUI();
                document.getElementById('currentOrderSection').style.display = 'none';
                document.getElementById('toggleStatusBtn').innerHTML = '<i class="fas fa-toggle-on"></i> የስራ ሁኔታ';
                document.getElementById('toggleStatusBtn').className = 'btn btn-success';
                updateEarningsDisplay();
                
                showNotification(`ትእዛዝ ተወስዷል! +${deliveryFee} ብር ተጨምሯል`, "success");
                saveDeliveryBoyData();
                
                // Notify shop
                const shopMessage = `ሰይፈ ሰላም!
ትእዛዝ #${currentOrder ? currentOrder.id : ''} ተወስዷል።
መላኪያ ሰራተኛ: ${currentDeliveryBoy.name}
ሰዓት: ${new Date().toLocaleTimeString('en-US', {hour: '2-digit', minute:'2-digit'})}`;
                
                setTimeout(() => {
                    window.open(`https://wa.me/251939869181?text=${encodeURIComponent(shopMessage)}`, '_system');
                }, 1000);
                
                // Ask for rating
                setTimeout(() => {
                    showRatingDialog();
                }, 2000);
            }
        }
        
        function cancelDelivery() {
            if (!currentOrder) return;
            
            if (confirm("ይህን ትእዛዝ ማሰርዝ ይፈልጋሉ?")) {
                // Add back to available orders
                const orderCard = createOrderCard(currentOrder);
                document.getElementById('availableOrders').prepend(orderCard);
                
                // Reset
                currentOrder = null;
                currentDeliveryBoy.currentOrder = null;
                currentDeliveryBoy.status = 'available';
                
                // Update order status
                const orderIndex = availableOrders.findIndex(o => o.id === currentOrder ? currentOrder.id : null);
                if (orderIndex !== -1) {
                    availableOrders[orderIndex].assignedTo = null;
                    availableOrders[orderIndex].status = 'ready';
                    saveOrders();
                }
                
                // Update UI
                updateStatusUI();
                document.getElementById('currentOrderSection').style.display = 'none';
                document.getElementById('toggleStatusBtn').innerHTML = '<i class="fas fa-toggle-on"></i> የስራ ሁኔታ';
                document.getElementById('toggleStatusBtn').className = 'btn btn-success';
                document.getElementById('noOrdersMessage').style.display = 'none';
                
                showNotification("ትእዛዝ ተሰርዟል", "warning");
                saveDeliveryBoyData();
            }
        }
        
        function callCustomer(phone) {
            window.open(`tel:${phone}`, '_system');
        }
        
        function updateEarningsDisplay() {
            document.getElementById('earningsToday').textContent = currentDeliveryBoy.earningsToday + ' ብር';
            document.getElementById('completedToday').textContent = currentDeliveryBoy.completedToday;
        }
        
        function saveDeliveryBoyData() {
            localStorage.setItem('current_delivery_boy', JSON.stringify(currentDeliveryBoy));
        }
        
        function saveOrders() {
            localStorage.setItem('delivery_orders', JSON.stringify(availableOrders));
        }
        
        function setupNavigation() {
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Remove active class from all items
                    navItems.forEach(i => i.classList.remove('active'));
                    
                    // Add active class to clicked item
                    this.classList.add('active');
                });
            });
        }
        
        function showOrdersHistory() {
            const completedOrders = availableOrders.filter(order => order.status === 'delivered');
            
            let historyHTML = `
                <div style="background: white; border-radius: 12px; padding: 25px; margin: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
                    <h2 style="color: var(--primary); margin-bottom: 20px;">የትእዛዝ ታሪክ</h2>
            `;
            
            if (completedOrders.length === 0) {
                historyHTML += `
                    <div style="text-align: center; padding: 40px; color: #666;">
                        <i class="fas fa-history" style="font-size: 3rem; color: #ddd; margin-bottom: 15px;"></i>
                        <p>እስካሁን ምንም ትእዛዝ አልተወሰደም</p>
                    </div>
                `;
            } else {
                completedOrders.forEach(order => {
                    historyHTML += `
                        <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 10px; border-left: 3px solid var(--success);">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                                <strong style="color: var(--primary);">ትእዛዝ #${order.id}</strong>
                                <span style="color: #666; font-size: 0.9rem;">${order.deliveredAt || order.time}</span>
                            </div>
                            <div style="color: #666;">${order.customer} - ${order.total}</div>
                        </div>
                    `;
                });
            }
            
            historyHTML += `
                    <button class="btn" onclick="closeModal()" style="width: 100%; margin-top: 20px; padding: 12px;">
                        ዝጋ
                    </button>
                </div>
            `;
            
            showModal('የትእዛዝ ታሪክ', historyHTML);
        }
        
        function showProfile() {
            const profileHTML = `
                <div style="background: white; border-radius: 12px; padding: 25px; margin: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.05);">
                    <div style="text-align: center; margin-bottom: 30px;">
                        <div style="width: 100px; height: 100px; background: linear-gradient(135deg, var(--primary), #2d5a3d); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 15px; color: white; font-size: 2.5rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <h2 style="color: var(--primary);">${currentDeliveryBoy.name}</h2>
                        <p style="color: #666;">${formatPhone(currentDeliveryBoy.phone)}</p>
                    </div>
                    
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin-bottom: 20px;">
                        <h3 style="color: var(--dark); margin-bottom: 15px;">የዛሬ አጠቃላይ</h3>
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px;">
                            <div style="text-align: center;">
                                <div style="font-size: 1.8rem; font-weight: 700; color: var(--primary);">${currentDeliveryBoy.completedToday}</div>
                                <div style="color: #666; font-size: 0.9rem;">ትእዛዞች</div>
                            </div>
                            <div style="text-align: center;">
                                <div style="font-size: 1.8rem; font-weight: 700; color: var(--success);">${currentDeliveryBoy.earningsToday}</div>
                                <div style="color: #666; font-size: 0.9rem;">ብር</div>
                            </div>
                        </div>
                    </div>
                    
                    <div style="margin-top: 25px;">
                        <button class="btn btn-primary" style="width: 100%;" onclick="changeDeliveryBoy()">
                            <i class="fas fa-exchange-alt"></i> መላኪያ ሰራተኛ ቀይር
                        </button>
                        <button class="btn btn-danger" style="width: 100%; margin-top: 10px;" onclick="logout()">
                            <i class="fas fa-sign-out-alt"></i> ውጣ
                        </button>
                    </div>
                </div>
            `;
            
            showModal('የመላኪያ ሰራተኛ መረጃ', profileHTML);
        }
        
        function changeDeliveryBoy() {
            const deliveryBoys = [
                {id: 1, name: "አብዱሬ", phone: "0948002320"},
                {id: 2, name: "ሀብታሙ", phone: "0911675357"},
                {id: 3, name: "እንዳልክ", phone: "09722550415"}
            ];
            
            let selectionHTML = `
                <div style="padding: 20px;">
                    <h3 style="color: var(--primary); margin-bottom: 20px;">መላኪያ ሰራተኛ ይምረጡ</h3>
                    <div style="display: grid; gap: 15px;">
            `;
            
            deliveryBoys.forEach(boy => {
                selectionHTML += `
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border: 2px solid #e9ecef; cursor: pointer; transition: all 0.3s;"
                         onclick="selectDeliveryBoy(${boy.id})">
                        <div style="font-weight: 600; font-size: 1.1rem; color: var(--primary);">${boy.name}</div>
                        <div style="color: #666; margin-top: 5px;">${formatPhone(boy.phone)}</div>
                    </div>
                `;
            });
            
            selectionHTML += `
                    </div>
                    <button onclick="closeModal()" class="btn" style="width: 100%; margin-top: 20px; padding: 12px;">
                        አትቀበል
                    </button>
                </div>
            `;
            
            showModal('መላኪያ ሰራተኛ ምረጥ', selectionHTML);
        }
        
        function selectDeliveryBoy(boyId) {
            const deliveryBoys = [
                {id: 1, name: "አብዱሬ", phone: "0948002320", earningsToday: 0, completedToday: 0},
                {id: 2, name: "ሀብታሙ", phone: "0911675357", earningsToday: 0, completedToday: 0},
                {id: 3, name: "እንዳልክ", phone: "09722550415", earningsToday: 0, completedToday: 0}
            ];
            
            const selectedBoy = deliveryBoys.find(b => b.id === boyId);
            if (selectedBoy) {
                currentDeliveryBoy = {
                    ...selectedBoy,
                    status: 'available',
                    currentOrder: null,
                    totalEarnings: 0
                };
                
                saveDeliveryBoyData();
                loadDeliveryBoyInfo();
                closeModal();
                showNotification(`አሁን ${selectedBoy.name} ነዎት`, 'success');
            }
        }
        
        function showRatingDialog() {
            const ratingHTML = `
                <div style="text-align: center; padding: 20px;">
                    <div style="font-size: 3rem; color: var(--warning); margin-bottom: 15px;">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3 style="color: var(--primary); margin-bottom: 10px;">አገልግሎትዎን ደረጃ ይስጡ</h3>
                    <p style="color: #666; margin-bottom: 20px;">ዛሬው አገልግሎት እንዴት ነበር?</p>
                    
                    <div style="display: flex; justify-content: center; gap: 10px; margin-bottom: 25px;">
                        ${[1,2,3,4,5].map(star => `
                            <div style="font-size: 2rem; color: #ddd; cursor: pointer;"
                                 onclick="submitRating(${star})">
                                <i class="fas fa-star"></i>
                            </div>
                        `).join('')}
                    </div>
                    
                    <button class="btn" onclick="closeModal()" style="margin-top: 10px;">
                        በኋላ ላይ
                    </button>
                </div>
            `;
            
            showModal('የአገልግሎት ደረጃ', ratingHTML);
        }
        
        function submitRating(rating) {
            showNotification(`አመሰግናለሁ! ${rating} ኮከቦች ተሰጥተዋል`, 'success');
            closeModal();
        }
        
        function logout() {
            if (confirm('ከመለያዎ መውጣት ይፈልጋሉ?')) {
                localStorage.removeItem('current_delivery_boy');
                showNotification('በተሳካ ሁኔታ ወጥተዋል', 'success');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            }
        }
        
        function checkForNewOrders() {
            // In real app, this would check Firebase or API
            // For now, we'll simulate
            if (Math.random() > 0.8) {
                simulateNewOrder();
            }
        }
        
        function simulateNewOrder() {
            if (currentDeliveryBoy.currentOrder) return;
            
            const sampleCustomers = ['ሚካኤል ደምሴ', 'አለማየሁ ገብረማሪያም', 'ማርያም አለማየሁ'];
            const sampleItems = [
                ['ገለምሶ (ሙሉ) x1', 'ኮካኮላ x2'],
                ['ልዩ (ግማሽ) x1', 'ፔፕሲ x1'],
                ['መጥቾ (ሙሉ) x1', 'ፕሪዴተር x1']
            ];
            const sampleAddresses = ['ሰሚት ኮንዶ', 'ቦሌ ሮድ', 'መካከለኛ አካባቢ'];
            
            const randomIndex = Math.floor(Math.random() * sampleCustomers.length);
            
            const newOrder = {
                id: availableOrders.length > 0 ? Math.max(...availableOrders.map(o => o.id)) + 1 : 2001,
                customer: sampleCustomers[randomIndex],
                phone: '09' + Math.floor(10000000 + Math.random() * 90000000),
                address: sampleAddresses[randomIndex],
                items: sampleItems[randomIndex],
                total: (200 + Math.floor(Math.random() * 800)) + ' ብር',
                notes: Math.random() > 0.7 ? 'በመግናኛ ቦታ ይጠብቁ' : '',
                status: 'ready',
                time: new Date().toLocaleTimeString('en-US', {hour: '2-digit', minute:'2-digit'}),
                assignedTo: null
            };
            
            availableOrders.push(newOrder);
            saveOrders();
            
            // Update UI if delivery boy is available
            if (currentDeliveryBoy.status === 'available' && !currentDeliveryBoy.currentOrder) {
                const orderCard = createOrderCard(newOrder);
                document.getElementById('availableOrders').prepend(orderCard);
                document.getElementById('noOrdersMessage').style.display = 'none';
                
                // Show notification
                showNewOrderNotification(newOrder);
            }
        }
        
        function showNewOrderNotification(order) {
            const notification = document.createElement('div');
            notification.className = 'notification notification-success';
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                left: 50%;
                transform: translateX(-50%);
                background: white;
                padding: 20px;
                border-radius: 12px;
                box-shadow: 0 10px 30px rgba(0,0,0,0.2);
                z-index: 3000;
                max-width: 350px;
                width: 90%;
                animation: slideIn 0.5s ease;
                border-left: 5px solid var(--success);
            `;
            
            notification.innerHTML = `
                <div class="notification-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div>
                    <strong style="color: var(--primary);">አዲስ ትእዛዝ!</strong>
                    <div style="color: #666; margin-top: 5px;">${order.customer} - ${order.total}</div>
                    <div style="margin-top: 15px; display: flex; gap: 10px;">
                        <button class="btn btn-success" onclick="this.closest('.notification').remove(); acceptOrder(${order.id})" style="flex: 1;">
                            ተቀበል
                        </button>
                        <button class="btn" onclick="this.closest('.notification').remove()" style="flex: 1;">
                            ተው
                        </button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 15 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 15000);
        }
        
        function formatPhone(phone) {
            const cleaned = phone.replace(/\D/g, '');
            if (cleaned.length === 9) {
                return cleaned.replace(/(\d{3})(\d{3})(\d{3})/, '$1 $2 $3');
            } else if (cleaned.length === 10) {
                return cleaned.replace(/(\d{3})(\d{3})(\d{4})/, '$1 $2 $3');
            }
            return phone;
        }
        
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            
            notification.innerHTML = `
                <div class="notification-icon">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'warning' ? 'exclamation' : 'info'}"></i>
                </div>
                <div>${message}</div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 3000);
        }
        
        function showModal(title, content) {
            // Close any existing modal
            closeModal();
            
            const modal = document.createElement('div');
            modal.id = 'customModal';
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.5);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 2000;
                padding: 20px;
            `;
            
            const modalContent = document.createElement('div');
            modalContent.style.cssText = `
                background: white;
                border-radius: 12px;
                width: 100%;
                max-width: 500px;
                max-height: 90vh;
                overflow-y: auto;
                box-shadow: 0 20px 50px rgba(0,0,0,0.3);
            `;
            
            modalContent.innerHTML = `
                <div style="background: var(--primary); color: white; padding: 20px; border-radius: 12px 12px 0 0;">
                    <h3 style="margin: 0;">${title}</h3>
                </div>
                <div>${content}</div>
            `;
            
            modal.appendChild(modalContent);
            document.body.appendChild(modal);
        }
        
        function closeModal() {
            const modal = document.getElementById('customModal');
            if (modal) {
                modal.remove();
            }
        }
    </script>
</body>
</html>
