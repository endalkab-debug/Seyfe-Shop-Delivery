        <div class="orders-grid" id="availableOrders">
            <!-- Orders will be loaded here -->
        </div>
        
        <!-- Current Order -->
        <div id="currentOrderSection" style="display: none;">
            <h2 class="section-title">
                <i class="fas fa-shipping-fast"></i>
                የአሁኑ ትእዛዝ
            </h2>
            
            <div class="current-order-container" id="currentOrderContainer">
                <!-- Current order will be loaded here -->
            </div>
        </div>
        
        <!-- Earnings -->
        <div class="earnings-card">
            <div class="earnings-title">የዛሬ ገቢ</div>
            <div class="earnings-amount" id="earningsToday">0 ብር</div>
            <div class="earnings-subtitle">ከ <span id="completedToday">0</span> ትእዛዞች</div>
